<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="webapp" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.app.model.User</class>

        <properties>
            <property name="javax.persistence.postgres.driver" value="org.postgresql.Driver" />
            <!--data base must be created before init persistence.xml -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgres://localhost:5432/webapp" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect" />
            <property name="hibernate.show_sql" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- init DDL operations -->
            <!--update,create, create-drop-->
        </properties>

    </persistence-unit>


</persistence>